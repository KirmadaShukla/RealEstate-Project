        {
          "name": "Admin Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.collectionVariables.set('adminToken', '');",
                  "    pm.test('Logout successful', () => {",
                  "        pm.expect(pm.response.json().success).to.be.true;",
                  "    });",
                  "    console.log('🚪 Logged out successfully, token cleared');",
                  "}"
                ]
