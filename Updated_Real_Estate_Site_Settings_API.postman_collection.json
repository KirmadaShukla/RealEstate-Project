            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/logout",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "logout"]
            },
            "description": "Logout admin and clear token"
