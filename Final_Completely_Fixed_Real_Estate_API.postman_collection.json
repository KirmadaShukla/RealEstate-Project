          "// Auto-set authorization header if token exists",
          "const token = pm.collectionVariables.get('adminToken');",
          "if (token && token.length > 0) {",
          "    pm.request.headers.add({",
          "        key: 'Authorization',",
          "        value: `Bearer ${token}`",
          "    });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save IDs from successful creation responses",
          "if (pm.response.code === 201) {",
          "    const response = pm.response.json();",
          "    ",
          "    // Save project ID if present",
          "    if (response.project && response.project._id) {",
          "        pm.collectionVariables.set('projectId', response.project._id);",
          "        console.log('📁 Project ID saved:', response.project._id);",
          "    }",
          "    ",
          "    // Save blog ID if present",
          "    if (response.blog && response.blog._id) {",
          "        pm.collectionVariables.set('blogId', response.blog._id);",
          "        console.log('📝 Blog ID saved:', response.blog._id);",
          "    }",
          "    ",
          "    // Save news ID if present",
          "    if (response.news && response.news._id) {",
          "        pm.collectionVariables.set('newsId', response.news._id);",
          "        console.log('📰 News ID saved:', response.news._id);",
          "    }",
          "    ",
          "    // Save contact ID if present",
          "    if (response.contact && response.contact._id) {",
